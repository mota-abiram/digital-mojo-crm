rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Function to check if user is authorized
    function isAuthorized() {
      return request.auth != null && (
        request.auth.token.email == 'komal@digitalmojo.in' ||
        request.auth.token.email == 'dhiraj@digitalmojo.in' ||
        request.auth.token.email == 'rupal@digitalmojo.in' ||
        request.auth.token.email == 'aditi@digitalmojo.in'
      );
    }

    match /{document=**} {
      allow read, write: if isAuthorized();
    }
  }
}
