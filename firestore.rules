rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Function to check if user is from the Digital Mojo team
    function isAuthorized() {
      return request.auth != null && (
        request.auth.token.email.lower() == 'komal@digitalmojo.in' ||
        request.auth.token.email.lower() == 'dhiraj@digitalmojo.in' ||
        request.auth.token.email.lower() == 'rupal@digitalmojo.in' ||
        request.auth.token.email.lower() == 'aditi@digitalmojo.in' ||
        request.auth.token.email.lower() == 'veda@digitalmojo.in' ||
        request.auth.token.email.lower() == 'abiram@digitalmojo.in' ||
        request.auth.token.email.lower() == 'pavan@digitalmojo.in'
      );
    }

    // Leads from Website (Public Creation, Team Editing)
    match /contacts/{contact} {
      allow create: if true;
      allow read, update, delete: if isAuthorized();
    }

    match /opportunities/{opportunity} {
      allow create: if true;
      allow read, update, delete: if isAuthorized();
    }

    // Standard User Profiles
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // Default catch-all for anything else
    match /{document=**} {
      allow read, write: if isAuthorized();
    }
  }
}
